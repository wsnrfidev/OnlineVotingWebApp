@page "/"
@using OnlineVotingApp.Services
@using OnlineVotingApp.Components.Pages
@inject VoteService VoteService

<div class="container">
    <div class="jumbotron mt-4 text-center" style="background-color: #2c3e50; color: #ecf0f1; border-radius: 10px; padding: 2rem; margin-bottom: 2rem;">
        <h1 class="display-4">Welcome to the Voting App!</h1>
        <p class="lead">This is a simple and interactive platform to cast your votes and view results.</p>
        <hr class="my-4" style="border-top: 2px solid #ecf0f1;">
        <p>Click the button below to start voting.</p>
        <a class="btn btn-lg btn-hover" href="/voting" role="button" style="background-color: #f39c12; color: #ffffff; border-radius: 5px;">Start Voting</a>
    </div>

    <div class="row mt-4">
        <div class="col-md-3 mb-4">
            <div class="card h-100 shadow" style="border: none; border-radius: 10px; overflow: hidden;">
                <img src="/Images/Voting.jpg" class="card-img-top" alt="Voting" style="width: 100%; height: 200px; object-fit: cover;">
                <div class="card-body text-center" style="background-color: #ecf0f1;">
                    <h5 class="card-title" style="color: #2c3e50;">Voting</h5>
                    <p class="card-text" style="color: #7f8c8d;">Cast your vote on various topics and issues.</p>
                    <a href="/voting" class="btn btn-hover" style="background-color: #f39c12; color: #ffffff; border-radius: 5px;">Vote Now</a>
                </div>
            </div>
        </div>
        <div class="col-md-3 mb-4">
            <div class="card h-100 shadow" style="border: none; border-radius: 10px; overflow: hidden;">
                <img src="/Images/Results.jpg" class="card-img-top" alt="Results" style="width: 100%; height: 200px; object-fit: cover;">
                <div class="card-body text-center" style="background-color: #ecf0f1;">
                    <h5 class="card-title" style="color: #2c3e50;">Results</h5>
                    <p class="card-text" style="color: #7f8c8d;">View the results of the votes in real-time.</p>
                    <a href="/results" class="btn btn-hover" style="background-color: #f39c12; color: #ffffff; border-radius: 5px;">View Results</a>
                </div>
            </div>
        </div>
        <div class="col-md-3 mb-4">
            <div class="card h-100 shadow" style="border: none; border-radius: 10px; overflow: hidden;">
                <img src="/Images/Topics.jpg" class="card-img-top" alt="Contact" style="width: 100%; height: 200px; object-fit: cover;">
                <div class="card-body text-center" style="background-color: #ecf0f1;">
                    <h5 class="card-title" style="color: #2c3e50;">Topics</h5>
                    <p class="card-text" style="color: #7f8c8d;">View and explore the different voting topics.</p>
                    <a href="/topics" class="btn btn-hover" style="background-color: #f39c12; color: #ffffff; border-radius: 5px;">View Topics</a>
                </div>
            </div>
        </div>
        <div class="col-md-3 mb-4">
            <div class="card h-100 shadow" style="border: none; border-radius: 10px; overflow: hidden;">
                <img src="/Images/Logo.jpg" class="card-img-top" alt="Topics" style="width: 100%; height: 200px; object-fit: cover;">
                <div class="card-body text-center" style="background-color: #ecf0f1;">
                    <h5 class="card-title" style="color: #2c3e50;">Contact</h5>
                    <p class="card-text" style="color: #7f8c8d;">Get in touch with us for any inqueries or support.</p>
                    <a href="/contact" class="btn btn-hover" style="background-color: #f39c12; color: #ffffff; border-radius: 5px;">Contact Us</a>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    body {
        background-color: #f5f5f5;
        font-family: 'Arial', sans-serif;
    }

    .jumbotron {
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    }

    .card {
        transition: transform 0.2s;
    }

        .card:hover {
            transform: translateY(-10px);
        }

    .btn {
        transition: background-color 0.2s, color 0.2s;
    }

    .btn-hover:hover {
        background-color: #ffffff !important;
        color: #2c3e50 !important;
    }

    .row.mt-4 {
        margin-top: 1.5rem;
    }
</style>
